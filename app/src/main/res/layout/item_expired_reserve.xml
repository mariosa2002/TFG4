<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/scName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#0080F7"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/scAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0080F7"
        android:gravity="center" />

    <TextView
        android:id="@+id/facilityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0080F7"
        android:gravity="center" />

    <TextView
        android:id="@+id/DateHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#0080F7"
        android:gravity="center" />

    <TextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#0080F7"
        android:textSize="14sp"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btnWriteReview"
        android:layout_width="200dp"
        android:backgroundTint="#0080F7"
        android:layout_height="wrap_content"
        android:text="Escribir ReseÃ±a"
        android:textColor="@color/white"
        android:gravity="center" />
</LinearLayout>